{
  "name": "@enymo/glissade",
  "version": "0.6.0",
  "description": "Utility hooks for input creation",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.cts",
  "exports": {
    ".": {
      "types": {
        "import": "./dist/index.d.mts",
        "require": "./dist/index.d.cts"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "tsdown": {
    "entry": [
      "src/js/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true
  },
  "scripts": {
    "build": "tsdown"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enymo/glissade.git"
  },
  "author": "enymo GmbH",
  "license": "MIT",
  "devDependencies": {
    "@types/lodash": "^4.17.4",
    "@types/react": "^18.3.3",
    "postcss": "^8.4.17",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@enymo/react-form-component": "^1.6.2 || ^2.0.0",
    "@enymo/react-hybrid-input-hook": "^2.0.0",
    "react": ">=17.0.0",
    "react-hook-form": "^7.51.5"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "lodash": "^4.17.21"
  }
}
